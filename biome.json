{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "extends": ["@taskylizard/biome-config", "./.cache/imports.json"],
  "files": {
    "ignore": [
      "docs/.vitepress/**/*.vue",
      "docs/.vitepress/vue-shim.d.ts",
      ".cache/imports.d.ts"
    ]
  },
  "formatter": {
    "enabled": false
  },
  "javascript": {
    "globals": [
      "defineNitroConfig",
      "eventHandler",
      "useRuntimeConfig",
      "readValidatedBody",
      "defineEventHandler"
    ]
  },
  "linter": {
    "rules": {
      "style": {
        "useFilenamingConvention": "off",
        "noDefaultExport": "off"
      }
    }
  }
}
